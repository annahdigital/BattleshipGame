<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.battleshipgame">

    <application
        android:allowBackup="true"
        android:icon="@drawable/kitty"
        android:label="@string/app_name"
        android:roundIcon="@drawable/kitty"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Activities.StatisticsActivity"></activity>
        <activity android:name=".Activities.GameActivity" />
        <activity android:name=".Activities.CreateFieldActivity" />
        <activity android:name=".Activities.MenuActivity" />
        <activity android:name=".Activities.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>